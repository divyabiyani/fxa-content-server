<div id="main-content" class="card">
  {{#isLinkExpired}}
    <header>
      <h1 id="fxa-reject-unblock-code-link-expired-header">{{#t}}Link expired{{/t}}</h1>
    </header>

    <section>
      <p>
        {{#t}}The link you clicked is expired.{{/t}}
      </p>
    </section>
  {{/isLinkExpired}}

  {{#isLinkDamaged}}
    <header>
      <h1 id="fxa-reject-unblock-code-link-damaged-header">{{#t}}Link damaged{{/t}}</h1>
    </header>

    <section>
      <p>
        {{#t}}The link you clicked was missing characters, and may have been broken by your email client. Copy the address carefully, and try again.{{/t}}
      </p>
    </section>
  {{/isLinkDamaged}}

  {{#error}}
    <header>
      <h1 id="fxa-reject-unblock-code-link-error-header">{{#t}}Error reporting sign-in{{/t}}</h1>
    </header>

    <section>
      <div class="error visible">{{error}}</div>

      <p>
      {{#t}}There was an error reporting this unexpected sign-in request.{{/t}}
      </p>
    </section>

  {{/error}}

  {{#isReported}}
    <header>
      <h1 id="fxa-reject-unblock-code-header">{{#t}}Unexpected sign-in request reported{{/t}}</h1>
    </header>

    <section>
      <div class="success"></div>
      <div class="error"></div>

      <p>
      {{#t}}Thank you for reporting this unexpected sign-in request. The sign-in request was blocked, no further action is needed on your part.{{/t}}
      </p>

    </section>

    <div class="links">
      <a href="https://support.mozilla.org">{{#t}}Why is this happening?{{/t}}</a>
    </div>
  {{/isReported}}
</div>
